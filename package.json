{
  "name": "hello-world-vue",
  "displayName": "hello-world-vue",
  "description": "A hello world sample extension to demonstrate using Vue with the Webview UI Toolkit for VS Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:hello-world.showHelloWorld"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "menus": {
      "editor/context": [
        {
          "command": "hello-world.showHelloWorld",
          "when": "resourceExtname == .xml"
        }
      ]
    },
    "commands": [
      {
        "command": "hello-world.showHelloWorld",
        "title": "XML : Show"
      },
      {
        "command": "vscode-demo.currentText",
        "title": "currentText"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "scm-me",
          "title": "scm",
          "icon": "assets/remote-explorer.svg"
        }
      ]
    },
    "views": {
      "scm-me": [
        {
          "id": "scm-me",
          "name": "Source Control"
        },
        {
          "id": "package-outline",
          "name": "Outline"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "scm-me",
        "contents": "当该项目未上传git仓库时，提示用户上传项目.\n[Open Folder](command:vscode.openFolder)\n[Clone Repository](command:git.clone)\n官方文档地址如下：[read our docs](https://aka.ms/vscode-scm)."
      }
    ]
  },
  "scripts": {
    "install:all": "npm install && cd webview-ui && npm install",
    "start:webview": "cd webview-ui && npm run start",
    "build:webview": "cd webview-ui && npm run build",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.46.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  }
}